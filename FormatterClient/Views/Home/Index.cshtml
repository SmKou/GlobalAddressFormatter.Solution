@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<main>
    <section>
        @Html.Label("CountryCode", "Select a Country:")
        @Html.DropDownList("CountryCode", new { @onchange = "@Get"})
    </section>
    <section>
        @if (formats != null)
        {
            <table>
                <thead>
                    <tr>
                        <th>Format</th>
                        <th>Pattern</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Format format in formats)
                    {
                        
                    }
                </tbody>
            </table>
        }
    </section>
</main>

@code {
    private List<Format> formats;

    private void Get(ChangeEventArgs e)
    {
        string code = e.Value.ToString();
        formats = Format.GetFormats(code);
         
    }
}